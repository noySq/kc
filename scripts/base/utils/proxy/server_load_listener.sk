on load:
	set {_hostname} to get_hostname()

	set {_servers::*} to get_redis_list({-config::redis::channel::server-list})
	if {_servers::*} contains {_hostname}:
		stop

	add_to_redis_list({_hostname}, {-config::redis::channel::server-list})

on unload:
	set {_hostname} to get_hostname()
	remove_from_redis_list({_hostname}, {-config::redis::channel::server-list})