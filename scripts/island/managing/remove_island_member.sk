function remove_island_member(p: player, ID: text):

	set {_document::island} to get_document({-config::island::collection::island}, "uuid", {_ID})
	set {_document::player} to get_document({-config::island::collection::player}, "uuid", "%uuid of {_p}%")

	if document_exists({-config::island::collection::island}, "uuid", {_ID}) = true:

		set {_uuid} to "%uuid of {_p}%"

		set {_members::*} to mongo list "members" of {_document::island}
		remove {_uuid} from {_members::*}
		set mongo list "members" of {_document::island} to {_members::*}
		update mongo document {_document::island} of get_collection({-config::island::collection::island})

		set {_ids::*} to mongo list "islands" of {_document::player}
		remove {_ID} from {_ids::*}
		set mongo list "islands" of {_document::player} to {_ids::*}
		update mongo document {_document::player} of get_collection({-config::island::collection::player})